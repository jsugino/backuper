    <copy level="full" storage="G" />
  </backup>
  <backup name="Linux.junsei">
    <original storage="STD" />
    <copy level="daily" storage="C" />
    <copy level="daily" storage="D" />
    <copy level="full" storage="G" />
  </backup>
  <backup name="Users.junsei">
    <original storage="C" />
    <copy level="daily" storage="D" />
    <copy level="full" storage="G" />
  </backup>

  <backup name="blog">
